{
  "metadata": {
    "spec-version": "1.0"
  },
  "configuration-groups": [
    {
      "label": "DynamoDB Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        },
        {
          "widget-type": "password",
          "label": "Access Key",
          "name": "accessKey"
        },
        {
          "widget-type": "password",
          "label": "Secret Access Key",
          "name": "secretAccessKey"
        },
        {
          "widget-type": "select",
          "label": "Region",
          "name": "regionId",
          "widget-attributes": {
            "values": [
              "us-east-1",
              "us-east-2",
              "us-west-1",
              "us-west-2",
              "ca-central-1",
              "ap-south-1",
              "ap-northeast-2",
              "ap-southeast-1",
              "ap-southeast-2",
              "ap-northeast-1",
              "eu-central-1",
              "eu-west-1",
              "eu-west-2",
              "sa-east-1"
            ],
            "default": "us-west-2"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Endpoint URL",
          "name": "endpointUrl"
        },
        {
          "widget-type": "textbox",
          "label": "Table Name",
          "name": "tableName"
        },
        {
          "widget-type": "keyvalue-dropdown",
          "label": "Primary Key Fields",
          "name": "primaryKeyFields",
          "widget-attributes": {
            "showDelimiter": "false",
            "dropdownOptions": [
              "N",
              "S",
              "B"
            ],
            "key-placeholder": "Field Name"
          }
        },
        {
          "widget-type": "keyvalue-dropdown",
          "label": "Primary Key Types",
          "name": "primaryKeyTypes",
          "widget-attributes": {
            "showDelimiter": "false",
            "dropdownOptions": [
              "HASH",
              "RANGE"
            ],
            "key-placeholder": "Field Name"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Read Capacity Units",
          "name": "readCapacityUnits"
        },
        {
          "widget-type": "textbox",
          "label": "Write Capacity Units",
          "name": "writeCapacityUnits"
        }
      ]
    }
  ],
  "outputs": []
}
